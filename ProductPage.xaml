<Page x:Class="Yakupova41.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Yakupova41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductPage"  FontFamily="Comic Sans MS">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel Orientation = "Horizontal" HorizontalAlignment = "Center">
            <StackPanel Orientation = "Vertical" Margin = "10">
                <TextBlock Text = "поиск по имени" TextAlignment = "Left" Width = "300" FontSize = "20"></TextBlock>
                <TextBox Name = "TBSearch" TextChanged = "TBSearch_TextChanged" Width = "300" FontSize = "15"></TextBox>
            </StackPanel>
            <StackPanel Orientation = "Vertical" Margin = "10">
                <TextBlock Text = "фильтрация по скидке" TextAlignment = "Center" Width = "300" FontSize = "20"></TextBlock>
                <ComboBox Name = "ComboType" SelectionChanged = "ComboType_SelectionChanged" Width = "150" FontSize = "15">
                    <TextBlock>Все</TextBlock>
                    <TextBlock>от 0 до 9,99%</TextBlock>
                    <TextBlock>от 10% до 14,99%</TextBlock>
                    <TextBlock>15% и более</TextBlock>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation = "Vertical" Margin = "10">
                <RadioButton Content = "по возрастанию стоимости" Name = "RButtonUp" GroupName = "Sort" Width = "250" Checked = "RButtonUp_Checked" FontSize = "15"></RadioButton>
                <RadioButton Content = "по убыванию стоимости" Name = "RButtonDown" GroupName = "Sort" Width = "250" Checked = "RButtonDown_Checked" FontSize = "15"></RadioButton>
            </StackPanel>
        </WrapPanel>
        <TextBlock Name = "SearchResultTB" Text = "" Grid.Column = "0" Grid.Row = "0" FontSize = "15" HorizontalAlignment = "Left" VerticalAlignment = "Center"/>
        <ListView Name="ProductListView" Grid.Row="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="800"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Width="200" Grid.Column="0" Grid.RowSpan="4"  Stretch="UniformToFill" HorizontalAlignment="Center">
                            <Image.Source>
                                <Binding Path="ProductPhotoPath">
                                    <Binding.TargetNullValue>
                                        <ImageSource>/res/picture.png</ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="{Binding ProductName}" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"></TextBlock>
                        <TextBlock Text="Скидка" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Right" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductDiscountAmount, StringFormat={}{0}%}" Grid.Column="2" Grid.Row="2"  HorizontalAlignment="Center" FontSize="35"></TextBlock>

                        <TextBlock Text="{Binding ProductDescription}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductCost, StringFormat={}{0:0} рублей}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductManufacturer}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20"></TextBlock>
                        
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
