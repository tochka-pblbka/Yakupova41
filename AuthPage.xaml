<Page x:Class="Yakupova41.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Yakupova41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage" FontFamily="Comic Sans MS">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Логин" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"></TextBlock>
        <TextBlock Text="Пароль" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"></TextBlock>
        <TextBox Name="LoginTB" Grid.Column="1" Grid.Row="0" Height="30" Width="200" HorizontalAlignment="Center" Text="{Binding UserLogin}" FontSize="20"></TextBox>
        <TextBox Name="PassTB" Grid.Column="1" Grid.Row="1" Height="30" Width="200" HorizontalAlignment="Center" Text="{Binding UserPassword}" FontSize="20"></TextBox>

        <Button Name="LikeGuest" Click="LikeGuest_Click" Content ="Войти как гость" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
        <Button Name="Enter" Click="Enter_Click" Content ="Войти" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Name="CaptchaPanel" Visibility="Collapsed">
            <TextBlock Name="captchaOneWord" FontSize="22" Margin="30,0,0,0" Foreground="Black"></TextBlock>
            <TextBlock Name="captchaTwoWord" FontSize="22" TextDecorations="Strikethrough" Foreground="Black" Margin="10,10,0,0"></TextBlock>
            <TextBlock Name="captchaThreeWord" FontSize="22" TextDecorations="Strikethrough" Foreground="Black" Margin="10,-10,0,0"></TextBlock>
            <TextBlock Name="captchaFourWord" FontSize="22" TextDecorations="Strikethrough" Foreground="Black" Margin="10,5,0,0"></TextBlock>
        </StackPanel>

        <TextBox Grid.Row="3" Grid.ColumnSpan="2" 
                 Text="" Name="CaptchaTB"
                 Width="200"
                 VerticalAlignment="Center" 
                 HorizontalAlignment="Center"
                 Margin="10"
                 Visibility="Collapsed"/>

    </Grid>
</Page>
